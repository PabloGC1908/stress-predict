<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recomendaciones"
            android:textAlignment="center"
            android:textColor="#008000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Bloque: Dormir -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="#A6E3A1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <TextView
                android:text="Dormir"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Asegúrate de dormir lo suficiente para reducir el riesgo de enfermedades como la diabetes, problemas del corazón y más."
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_menu_view"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bloque: Meditación -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="#A6E3A1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <TextView
                android:text="Meditación"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="La meditación te ayuda a concentrarte. Toma una respiración profunda y realiza sesiones diarias para convertirlo en un hábito."
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_lock_idle_alarm"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_menu_compass"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bloque: Nutrición -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="#A6E3A1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp">

            <TextView
                android:text="Nutrición"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Comer bien es clave para tu bienestar. Selecciona ingredientes saludables y anota tus progresos para crear hábitos duraderos."
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_agenda"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_menu_edit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:src="@android:drawable/ic_menu_crop"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>